#include <stdio.h>
#include <stdlib.h>
#include <time.h>

#define TAM_FILA 5

// -------------------------------------------------------------
// Struct que representa uma pe√ßa do Tetris
// -------------------------------------------------------------
typedef struct {
    char nome;   // I, O, T, L
    int id;      // identificador √∫nico
} Peca;


// -------------------------------------------------------------
// Gerar uma nova pe√ßa automaticamente
// -------------------------------------------------------------
Peca gerarPeca(int id) {
    Peca p;
    char tipos[4] = {'I', 'O', 'T', 'L'};
    p.nome = tipos[rand() % 4];
    p.id = id;
    return p;
}


// -------------------------------------------------------------
// Verifica se a fila est√° cheia
// -------------------------------------------------------------
int filaCheia(int inicio, int fim, int quantidade) {
    return quantidade == TAM_FILA;
}

// -------------------------------------------------------------
// Verifica se a fila est√° vazia
// -------------------------------------------------------------
int filaVazia(int quantidade) {
    return quantidade == 0;
}


// -------------------------------------------------------------
// Inserir pe√ßa no final da fila (enqueue)
// -------------------------------------------------------------
void enqueue(Peca fila[], int *fim, int *quantidade, int *idGlobal) {
    if (filaCheia(0, 0, *quantidade)) {
        printf("\n‚ö†Ô∏è  A fila est√° cheia! N√£o √© poss√≠vel inserir mais pe√ßas.\n");
        return;
    }

    Peca nova = gerarPeca((*idGlobal)++);
    fila[*fim] = nova;

    *fim = (*fim + 1) % TAM_FILA;
    (*quantidade)++;

    printf("\n‚úÖ Pe√ßa [%c %d] adicionada √† fila!\n", nova.nome, nova.id);
}


// -------------------------------------------------------------
// Remover pe√ßa da frente da fila (dequeue)
// -------------------------------------------------------------
void dequeue(Peca fila[], int *inicio, int *quantidade) {
    if (filaVazia(*quantidade)) {
        printf("\n‚ö†Ô∏è  N√£o h√° pe√ßas para jogar! Fila vazia.\n");
        return;
    }

    Peca removida = fila[*inicio];
    *inicio = (*inicio + 1) % TAM_FILA;
    (*quantidade)--;

    printf("\nüéÆ Pe√ßa jogada: [%c %d]\n", removida.nome, removida.id);
}


// -------------------------------------------------------------
// Exibir a fila de pe√ßas
// -------------------------------------------------------------
void exibirFila(Peca fila[], int inicio, int quantidade) {
    printf("\n========== FILA DE PE√áAS ==========\n");

    if (quantidade == 0) {
        printf("Fila vazia.\n");
        return;
    }

    int index = inicio;
    for (int i = 0; i < quantidade; i++) {
        printf("[%c %d] ", fila[index].nome, fila[index].id);
        index = (index + 1) % TAM_FILA;
    }

    printf("\n===================================\n");
}


// -------------------------------------------------------------
// Fun√ß√£o principal com menu
// -------------------------------------------------------------
int main() {
    srand(time(NULL));

    Peca fila[TAM_FILA];
    int inicio = 0, fim = 0, quantidade = 0;
    int idGlobal = 0;

    // Inicializa com 5 pe√ßas
    for (int i = 0; i < TAM_FILA; i++) {
        fila[fim] = gerarPeca(idGlobal++);
        fim = (fim + 1) % TAM_FILA;
        quantidade++;
    }

    int opcao;

    do {
        exibirFila(fila, inicio, quantidade);

        printf("\n========== MENU ==========\n");
        printf("1 - Jogar pe√ßa (dequeue)\n");
        printf("2 - Inserir nova pe√ßa (enqueue)\n");
        printf("0 - Sair\n");
        printf("Escolha: ");
        scanf("%d", &opcao);

        switch (opcao) {
            case 1:
                dequeue(fila, &inicio, &quantidade);
                break;

            case 2:
                enqueue(fila, &fim, &quantidade, &idGlobal);
                break;

            case 0:
                printf("\nSaindo do sistema...\n");
                break;

            default:
                printf("\n‚ùå Op√ß√£o inv√°lida!\n");
        }

    } while (opcao != 0);

    return 0;
}
