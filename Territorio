t[def].tropas = 1;
strcpy(t[def].cor, t[at].cor);
}


} else if (dadoAt < dadoDef) {
printf("Defensor vence! Atacante perde 1 tropa.
");
t[at].tropas--;
} else {
printf("Empate! Nada acontece.
");
}
}


int verificarMissao(Territorio *t) {
int conquistados = 0;
for (int i = 0; i < QTD; i++) {
if (strcmp(t[i].cor, "Verde") != 0)
conquistados++;
}
if (conquistados >= 3) return 1;
return 0;
}


