/*
 * Nível Novato - Struct + Vetor Estático
 * Cadastro de 5 territórios com nome, cor e tropas.
 */

#include <stdio.h>
#include <string.h>

#define MAX_TERRITORIOS 5
#define MAX_NOME 30
#define MAX_COR 10

// Definição da struct Territorio
typedef struct {
    char nome[MAX_NOME];
    char cor[MAX_COR];
    int tropas;
} Territorio;

// Remove o 
 do fgets
void trim(char *s){
    size_t l = strlen(s);
    if(l>0 && s[l-1]=='
') s[l-1] = '
/*
