// MENU
// -------------------------------
int main() {
srand(time(NULL));


Territorio *mapa = criarTerritorios();
getchar();
cadastrar(mapa);


int op;
do {
printf("
===== MENU =====
");
printf("1 - Atacar
");
printf("2 - Verificar Missão
");
printf("0 - Sair
Escolha: ");
scanf("%d", &op);
getchar();


switch (op) {
case 1:
atacar(mapa);
exibirMapa(mapa);
break;
case 2:
if (verificarMissao(mapa))
printf("
VOCÊ COMPLETOU A MISSÃO!
");
else
printf("
Missão ainda não concluída.
");
break;
}
} while (op != 0);


free(mapa);
return 0;
}
