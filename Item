#include <stdio.h>
#include <string.h>
#include <stdlib.h>

#define MAX_ITENS 10

// -------------------------------------------------------------
// Struct que representa um item da mochila
// -------------------------------------------------------------
typedef struct {
    char nome[30];
    char tipo[20];
    int quantidade;
} Item;


// -------------------------------------------------------------
// Fun√ß√£o para inserir um item na mochila
// -------------------------------------------------------------
void inserirItem(Item mochila[], int *total) {
    if (*total >= MAX_ITENS) {
        printf("\n‚ö†Ô∏è Mochila cheia! N√£o √© poss√≠vel adicionar mais itens.\n");
        return;
    }

    Item novo;

    printf("\nDigite o nome do item: ");
    scanf(" %[^\n]", novo.nome);

    printf("Digite o tipo do item (arma, muni√ß√£o, cura...): ");
    scanf(" %[^\n]", novo.tipo);

    printf("Digite a quantidade: ");
    scanf("%d", &novo.quantidade);

    mochila[*total] = novo;
    (*total)++;

    printf("\n‚úÖ Item adicionado com sucesso!\n");
}


// -------------------------------------------------------------
// Fun√ß√£o de busca sequencial pelo nome do item
// -------------------------------------------------------------
int buscarItem(Item mochila[], int total, char nome[]) {
    for (int i = 0; i < total; i++) {
        if (strcmp(mochila[i].nome, nome) == 0)
            return i; // retorna o √≠ndice
    }
    return -1; // n√£o encontrado
}


// -------------------------------------------------------------
// Remo√ß√£o de item usando busca sequencial
// -------------------------------------------------------------
void removerItem(Item mochila[], int *total) {
    if (*total == 0) {
        printf("\n‚ö†Ô∏è A mochila est√° vazia.\n");
        return;
    }

    char nome[30];
    printf("\nDigite o nome do item a remover: ");
    scanf(" %[^\n]", nome);

    int pos = buscarItem(mochila, *total, nome);

    if (pos == -1) {
        printf("\n‚ùå Item n√£o encontrado!\n");
        return;
    }

    for (int i = pos; i < *total - 1; i++) {
        mochila[i] = mochila[i + 1];
    }

    (*total)--;

    printf("\nüóëÔ∏è Item removido com sucesso!\n");
}


// -------------------------------------------------------------
// Fun√ß√£o que lista todos os itens da mochila
// -------------------------------------------------------------
void listarItens(Item mochila[], int total) {
    printf("\n========== ITENS NA MOCHILA ==========\n");

    if (total == 0) {
        printf("Mochila vazia.\n");
        return;
    }

    for (int i = 0; i < total; i++) {
        printf("\nItem %d:\n", i + 1);
        printf("Nome: %s\n", mochila[i].nome);
        printf("Tipo: %s\n", mochila[i].tipo);
        printf("Quantidade: %d\n", mochila[i].quantidade);
    }

    printf("=======================================\n");
}


// -------------------------------------------------------------
// Fun√ß√£o principal com menu interativo
// -------------------------------------------------------------
int main() {
    Item mochila[MAX_ITENS];
    int total = 0;
    int opcao;

    do {
        printf("\n========== MENU DO INVENT√ÅRIO ==========\n");
        printf("1 - Inserir item\n");
        printf("2 - Remover item\n");
        printf("3 - Buscar item\n");
        printf("4 - Listar itens\n");
        printf("0 - Sair\n");
        printf("Escolha uma op√ß√£o: ");
        scanf("%d", &opcao);

        getchar(); // limpar buffer

        switch (opcao) {
            case 1:
                inserirItem(mochila, &total);
                listarItens(mochila, total);
                break;

            case 2:
                removerItem(mochila, &total);
                listarItens(mochila, total);
                break;

            case 3: {
                char nome[30];
                printf("\nDigite o nome do item para busca: ");
                scanf(" %[^\n]", nome);

                int pos = buscarItem(mochila, total, nome);

                if (pos == -1)
                    printf("\n‚ùå Item n√£o encontrado!\n");
                else {
                    printf("\nüîç Item encontrado!\n");
                    printf("Nome: %s\n", mochila[pos].nome);
                    printf("Tipo: %s\n", mochila[pos].tipo);
                    printf("Quantidade: %d\n", mochila[pos].quantidade);
                }
                break;
            }

            case 4:
                listarItens(mochila, total);
                break;

            case 0:
                printf("\nEncerrando sistema...\n");
                break;

            default:
                printf("\n‚ùå Op√ß√£o inv√°lida!\n");
        }

    } while (opcao != 0);

    return 0;
}

